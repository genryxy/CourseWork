<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MobileAppPhoto.UsersPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout>
        <ListView
            x:Name="RecordsView"
            ItemsSource="{Binding Path=Records}"
            ListView.RowHeight="200">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical">
                            <Entry
                                IsEnabled="False"
                                Text="{Binding Id}"
                                TextColor="DarkSlateGray" />
                            <Entry
                                IsEnabled="False"
                                Text="{Binding DateOfPhoto}"
                                TextColor="DarkSlateGray" />
                            <Entry Text="{Binding ProductName}" />
                            <Entry Text="{Binding ProductComposition}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ScrollView>
            <StackLayout>
                <Label x:Name="date" />
                <Image x:Name="imageName" />
                <Image x:Name="imageCompos" />
            </StackLayout>
        </ScrollView>
        <StackLayout>
            <Button x:Name="btnTakePhoto" Text="Сфотографировать" />
            <Button x:Name="btnPickPhoto" Text="Выбрать 2 фотографии"/>
        </StackLayout>
    </StackLayout>

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Name="Add"
            Activated="OnAddClick"
            Order="Secondary"
            Priority="0" />
        <ToolbarItem
            Name="Remove"
            Activated="OnRemoveClick"
            Order="Secondary"
            Priority="1" />
        <ToolbarItem
            Name="Remove all"
            Activated="OnRemoveAllClick"
            Order="Secondary"
            Priority="2" />
        <ToolbarItem
            Name="Save"
            Activated="OnSaveClick"
            Order="Secondary"
            Priority="3" />
    </ContentPage.ToolbarItems>
</ContentPage>